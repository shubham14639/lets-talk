<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneAuthActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/mobile_auth"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="Verify"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="1111111111"
                android:textSize="28sp"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/verify"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ll_edittext"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_one"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:nextFocusRight="@id/et_two"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_two"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:nextFocusRight="@id/et_three"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_three"
                android:layout_width="50dp"
                android:layout_height="52dp"

                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:nextFocusRight="@id/et_four"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_four"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:nextFocusRight="@id/et_five"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_five"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:nextFocusRight="@id/et_six"
                android:textSize="35sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_six"
                android:layout_width="50dp"
                android:layout_height="52dp"
                android:layout_marginRight="5dp"
                android:alpha="0.7"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="1"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>


        <Button
            android:id="@+id/submit"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/let_s_go" />
    </LinearLayout>


</LinearLayout>